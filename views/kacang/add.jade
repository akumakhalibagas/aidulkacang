extends ../layout/base
block content
    section.content-header
        h1
            | Add Kacang
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Kacang
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/kacang/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Jenis Kacang
                                    input(type='text',value='#{jenis_kacang}',name='jenis_kacang',placeholder='Enter jenis_kacang', autofocus).form-control
                                .form-group
                                    label
                                        | Stok Per Kg
                                    input(type='text',name='stok_per_kg',placeholder='Enter stok_per_kg').form-control
                                .form-group
                                    label
                                        | Harga Per Kg
                                    input(type='text',value='#{harga_per_kg}',name='harga_per_kg',placeholder='Enter harga_per_kg').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/kacang').btn.btn-primary.pull-right
                                    | Back